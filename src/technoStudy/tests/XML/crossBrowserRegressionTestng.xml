<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TechnoStudyCrossBrowser_RegressionTests" parallel="tests">
    <test name="ChromeRegression">
        <parameter name="BrowserType" value="chrome"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_501_DropdownMenu"/>
            <class name="technoStudy.tests.TC_502_CrossCampus"/>
            <class name="technoStudy.tests.TC_503_Booking"/>
            <class name="technoStudy.tests.TC_504_BlogPage"/>
            <class name="technoStudy.tests.TC_505_SubmenuSocialMedia"/>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
            <class name="technoStudy.tests.TC_507_CourseDetails"/>
            <class name="technoStudy.tests.TC_508_TermsOfUse"/>
        </classes>
    </test>
    <test name="EdgeRegression">
        <parameter name="BrowserType" value="edge"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_501_DropdownMenu"/>
            <class name="technoStudy.tests.TC_502_CrossCampus"/>
            <class name="technoStudy.tests.TC_503_Booking"/>
            <class name="technoStudy.tests.TC_504_BlogPage"/>
            <class name="technoStudy.tests.TC_505_SubmenuSocialMedia"/>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
            <class name="technoStudy.tests.TC_507_CourseDetails"/>
            <class name="technoStudy.tests.TC_508_TermsOfUse"/>
        </classes>
    </test>
    <test name="FirefoxRegression">
        <parameter name="BrowserType" value="firefox"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_501_DropdownMenu"/>
            <class name="technoStudy.tests.TC_502_CrossCampus"/>
            <class name="technoStudy.tests.TC_503_Booking"/>
            <class name="technoStudy.tests.TC_504_BlogPage"/>
            <class name="technoStudy.tests.TC_505_SubmenuSocialMedia"/>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
            <class name="technoStudy.tests.TC_507_CourseDetails"/>
            <class name="technoStudy.tests.TC_508_TermsOfUse"/>
        </classes>
    </test>
</suite>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TechnoStudyCrossBrowser_SmokeTests" parallel="tests">
    <test name="ChromeSmoke">
        <parameter name="BrowserType" value="chrome"/>
        <groups>
            <run>
                <include name="smokeTest"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
        </classes>
    </test>
    <test name="EdgeSmoke">
        <parameter name="BrowserType" value="edge"/>
        <groups>
            <run>
                <include name="smokeTest"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
        </classes>
    </test>
    <test name="FirefoxSmoke">
        <parameter name="BrowserType" value="firefox"/>
        <groups>
            <run>
                <include name="smokeTest"/>
            </run>
        </groups>
        <classes>
            <class name="technoStudy.tests.TC_506_LogoToHomepage"/>
        </classes>
    </test>
</suite>